{
    "preset": "@nestjs/testing",
    "testEnvironment": "node",
    "globalSetup": "./test/global-setup.ts",
    "testMatch": [
      "**/test/**/*.e2e-spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.module.{ts,js}",
      "!src/**/*.controller.{ts,js}",
      "!src/**/*.service.{ts,js}",
      "!src/**/*.e2e-spec.{ts,js}"
    ],
    "maxWorkers": 1,
    "testTimeout": 30000
  }
  